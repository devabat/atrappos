{
    "name": "atrappos-web",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^1.2.27",
        "@fortawesome/free-solid-svg-icons": "^5.12.1",
        "@fortawesome/react-fontawesome": "^0.1.8",
        "axios": "^0.19.0",
        "bootstrap": "^4.4.1",
        "classnames": "^2.2.6",
        "http-proxy-middleware": "^0.20.0",
        "jwt-decode": "^2.2.0",
        "leaflet": "^1.6.0",
        "leaflet-control-geocoder": "^1.11.0",
        "leaflet-draw": "^1.0.4",
        "leaflet-gesture-handling": "^1.1.8",
        "prop-types": "^15.7.2",
        "react": "^16.12.0",
        "react-bootstrap": "^1.0.0-beta.16",
        "react-dom": "^16.12.0",
        "react-leaflet": "^2.6.0",
        "react-leaflet-draw": "^0.19.0",
        "react-redux": "^7.1.3",
        "react-router-dom": "^4.3.1",
        "react-scripts": "^3.3.0",
        "redux": "^4.0.1",
        "redux-thunk": "^2.3.0"
    },
    "scripts": {
        "start-js": "react-scripts start",
        "build-js": "node scripts/build.js",
        "start": "npm-run-all -p watch-css start-js",
        "build": "npm run build-css && npm run build-js",
        "build-css": "node-sass-chokidar src/assets/scss -o src/assets/css",
        "watch-css": "npm run build-css && node-sass-chokidar src/assets/scss -o src/assets/css --watch --recursive"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "node-sass-chokidar": "^1.4.0",
        "npm-run-all": "^4.1.5"
    }
}
